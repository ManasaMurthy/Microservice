 #!groovy

node {
    try{

        sh ('git init')
        def exist = fileExists env.REPO_NAME
        if(exist){
            deleteDir env.REPO_NAME
        }
        sh ("git clone '${env.GIT_URL}' -b '${env.BRANCH_NAME}'")
        dir(env.REPO_NAME){
          sh ("ls -l")
           if(env.PROJECT_TYPE == 'micro'){
            echo "micro"
        } else {
           echo "spark"   
        }
        }
    }catch(Exception e){
        
    }
}
